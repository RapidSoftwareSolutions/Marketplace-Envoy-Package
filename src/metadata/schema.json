    ],
    "blocks": [
        {
            "name": "ImportEmployees",
            "description": "You can automatically refresh your employee directory as long as you can export to a csv.See more in readme.",
            "args": [
                {
                    "name": "apiKey",
                    "type": "credentials",
                    "info": "Your API Key.",
                    "required": true,
                    "vendorSchema": {
                        "name": "api_key"
                    }
                },
                {
                    "name": "csvFile",
                    "type": "File",
                    "info": "When crafting your employee directory csv, it\u2019s very important you strictly follow the format prescribed. It has to be in the exact order of Full Name, Email, and then Phone Number.",
                    "required": true
                }
            ],
            "vendorRequest": {
                "url": "https:\/\/app.envoy.com\/api\/configuration\/employee_list",
                "method": "post",
                "requestParameters": [
                    {
                        "type": "query",
                        "parameters": [
                            "api_key"
                        ]
                    }
                ]
            },
            "callbacks": [
                {
                    "name": "error",
                    "info": "Error"
                },
                {
                    "name": "success",
                    "info": "Success"
                }
            ]
        },
        {
            "name": "ImportPreRegistrationVisitor",
            "description": "This version of bulk visitor pre-registration allows you to pre-register guests by uploading a CSV.See more in readme.",
            "args": [
                {
                    "name": "apiKey",
                    "type": "credentials",
                    "info": "Your API Key.",
                    "required": true,
                    "vendorSchema": {
                        "name": "api_key"
                    }
                },
                {
                    "name": "csvFile",
                    "type": "File",
                    "info": "Csv file with Pre-Registration Visitors.",
                    "required": true
                },
                {
                    "name": "notifyInvitee",
                    "type": "Select",
                    "options": [
                        "true",
                        "false"
                    ],
                    "info": "Will send email invites to those on the list.",
                    "required": false,
                    "vendorSchema": {
                        "name": "notify_invitee"
                    }
                }
            ],
            "vendorRequest": {
                "url": "https:\/\/app.envoy.com\/api\/invites\/upload",
                "method": "post",
                "requestParameters": [
                    {
                        "type": "query",
                        "parameters": [
                            "api_key",
                            "notify_invitee"
                        ]
                    }
                ]
            },
            "callbacks": [
                {
                    "name": "error",
                    "info": "Error"
                },
                {
                    "name": "success",
                    "info": "Success"
                }
            ]
        },
        {
            "name": "getAllLocationVisitors",
            "description": "See all the entries for the master location. By default, it will return all time entries but you can also filter by to and from dates to get a range.",
            "args": [
                {
                    "name": "apiKey",
                    "type": "credentials",
                    "info": "Your API Key.",
                    "required": true,
                    "vendorSchema": {
                        "name": "api_key"
                    }
                },
                {
                    "name": "fromDate",
                    "type": "DatePicker",
                    "info": "iso8601 format ie. 2014-03-01.",
                    "required": false,
                    "vendorSchema": {
                        "name": "from_date"
                    }
                },
                {
                    "name": "toDate",
                    "type": "DatePicker",
                    "info": "iso8601 format ie. 2014-03-01.",
                    "required": false,
                    "vendorSchema": {
                        "name": "to_date"
                    }
                }
            ],
            "vendorRequest": {
                "url": "https:\/\/app.envoy.com\/api\/entries.json",
                "method": "get",
                "requestParameters": [
                    {
                        "type": "query",
                        "parameters": [
                            "api_key",
                            "to_date",
                            "from_date"
                        ]
                    }
                ]
            },
            "callbacks": [
                {
                    "name": "error",
                    "info": "Error"
                },
                {
                    "name": "success",
                    "info": "Success"
                }
            ]
        }
    ]
}